$(document).ready(function () {

  timer2 = new easytimer.Timer();

  $("#time-button").click(function () {
    if (this.value == "Start") {
      $("#time_sheet_timer_state").val("1")
      timer2.start();
      timer2.addEventListener('secondsUpdated', function (e) {
        $('#basicUsage').html(timer2.getTimeValues().toString())
      });
      this.value = "Stop"
      
    } else {
      $("#time_sheet_timer_state").val("0")
      timer2.stop();
      this.value = "Start"
    }
  });
})